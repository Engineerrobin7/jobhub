    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
